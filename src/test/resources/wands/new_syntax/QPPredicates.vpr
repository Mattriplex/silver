field f: Int

predicate Cell(x: Ref) {
    acc(x.f)
}

predicate Pair(x: Ref, y: Ref) {
    acc(x.f) && acc(y.f)
}

function get(x: Ref): Int
requires acc(Cell(x), 1/2) {
    unfolding acc(Cell(x), 1/2) in x.f
}

function sum(x: Ref, y: Ref): Int
requires Pair(x, y) {
    unfolding Pair(x, y) in x.f + y.f
}

