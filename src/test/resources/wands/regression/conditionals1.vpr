method test03(x: Ref, i: Int)
  requires acc(T(x)) && acc(E(x))
{
  package true --* (i == 0 ? acc(T(x)) : acc(E(x)))

  assert i != 0 ==> acc(T(x))
  assert i == 0 ==> acc(E(x))

  assert i == 0 ? acc(E(x)) : acc(T(x))

  //:: ExpectedOutput(assert.failed:insufficient.permission)
